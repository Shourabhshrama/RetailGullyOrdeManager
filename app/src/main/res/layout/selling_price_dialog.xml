<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="12dp"
    app:cardCornerRadius="10dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:padding="14dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:padding="8dp"
        android:text="Update Selling Price"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />
    <TextView   android:layout_width="match_parent"
        android:text="Amount"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/et_purchase_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_editback"
        android:hint="Amount"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_create_order" />
    <TextView   android:layout_width="match_parent"
        android:text="Delivery Charge"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_deleivercharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_editback"
        android:hint="Delivery Charge"

        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_create_order" />
    <TextView   android:layout_width="match_parent"
        android:text="Total Amount"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/et_purchase_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_editback"
        android:hint="Total Amount"

        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_create_order" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/selling_price_loader"
        android:layout_width="120dp"
        android:visibility="gone"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loader" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">


      <Button
          android:id="@+id/btn_selling_update"
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="8dp"
          android:background="@drawable/fabshape"
          android:gravity="center"

          android:text="UPdate"

          android:textColor="@color/white" />

      <Button
          android:id="@+id/tv_cancel2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="8dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="Cancel"
          android:textColor="@color/colorPrimary"
          android:padding="16dp"

          android:textAllCaps="true"
          android:textSize="12dp" />

    </LinearLayout>
  </LinearLayout>

</androidx.cardview.widget.CardView>